<%= form_with scope: resource_name, url: session_path(resource_name), class: "max-w-md mx-auto p-6 bg-white rounded shadow" do |f| %>
  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.email_field :email, autofocus: true, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.password_field :password, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <%= f.submit "Sign In", class: "w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700" %>
  
<%= render "users/shared/links" %>
<% end %>

